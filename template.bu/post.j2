{% extends "html.j2" %}

{% block header %}

<div class="title">
    <h1>{{title}}</h1>
    <div class="author">{{author}} ï¸± {{date.strftime(date_format or '%Y-%m-%d')}}</div>
</div>

<p>{{description}}</p>

<img src="{{image}}" alt="{{title}}">

{% endblock %}

{% block footer %}

<div class="related">
    {% for r in related %}
    <a class="block" href="{{r.path}}">
        <div class="preview">
            <img src="{{r.info.image}}" alt="{{r.info.title}}">
            <h3>{{r.info.title}}</h3>
            <p>{{r.info.description}}</p>
        </div>
    </a>
    {% endfor %}
</div>

<script src="https://giscus.app/client.js" data-repo="gkutiel/blog" data-repo-id="R_kgDOMypzYA"
    data-category="Announcements" data-category-id="DIC_kwDOMypzYM4Cjk0n" data-mapping="og:title" data-strict="0"
    data-reactions-enabled="1" data-emit-metadata="0" data-input-position="bottom" data-theme="light" data-lang="en"
    crossorigin="anonymous" async>
    </script>

{% endblock %}
